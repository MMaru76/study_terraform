# 外部定義 リージョン指定
/////////////////////////////////////////////////////////
provider "aws" {
  region = "ap-northeast-1"
}
/////////////////////////////////////////////////////////

# ポリシー
## 何のアクションをどこまでやっていいか決める
/////////////////////////////////////////////////////////
data "aws_iam_policy_document" "allow_describe_regions" {
  statement {
    effect    = "Allow"
    actions   = ["ec2:DescribeRegions"] # リージョン一覧を取得する
    resources = ["*"]
  }
}
/////////////////////////////////////////////////////////

# 上記の条件に則ってポリシー作成
/////////////////////////////////////////////////////////
resource "aws_iam_policy" "tabiya01" {
  name   = "tabiya011"
  policy = data.aws_iam_policy_document.allow_describe_regions.json
}
/////////////////////////////////////////////////////////

# 信頼ポリシー
## 何のサービスに関連させるか
/////////////////////////////////////////////////////////
data "aws_iam_policy_document" "ec2_assume_role" {
  statement {
    actions = ["sts:AssumeRole"]

    principals {
      type        = "Service"
      identifiers = ["ec2.amazonaws.com"]
    }
  }
}
/////////////////////////////////////////////////////////


# IAMロール
/////////////////////////////////////////////////////////
resource "aws_iam_role" "tabiya02" {
  name               = "tabiya021"
  assume_role_policy = data.aws_iam_policy_document.ec2_assume_role.json
}
/////////////////////////////////////////////////////////

# IAMポリシーのアタッチ
/////////////////////////////////////////////////////////
resource "aws_iam_role_policy_attachment" "tabiya03" {
  role       = aws_iam_role.tabiya02.name
  policy_arn = aws_iam_policy.tabiya01.arn
}
/////////////////////////////////////////////////////////